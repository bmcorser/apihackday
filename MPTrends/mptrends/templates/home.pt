<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>MPTrends</title>
    <link href='http://fonts.googleapis.com/css?family=Economica:400,400italic,700,700italic' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="static/css/graph.css">
    <script type="text/javascript" src="https://www.google.com/jsapi"></script>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
    <script type="text/javascript">
        google.load("visualization", "1", {packages:["corechart"]});
        google.setOnLoadCallback(drawChart);
        function drawChart(e,query) {
            if(typeof(query) == 'undefined'){
                 query = ['uk',10251,10358,11506];
            }

            var url = 	'/json/chart/'+query.join('/');

            var json = $.ajax({
                url: url,
                dataType : 'json',
                async: false
            }).responseText;

            var data = google.visualization.arrayToDataTable(eval(json));

            var options = {
                title: 'MPTrends',
                curveType: 'function',
                animation:{
                    duration: 500,
                },
            };
 
            var chart = new google.visualization.LineChart(document.getElementById('chart_div'));
            chart.draw(data, options);
        }
        $(document).ready(function(){
            var mplist = $.ajax({
                url: '/json/mplist',
                dataType: 'json',
                async: false,
                success: function(data){
                    $.each(data,function(party,mps){
                        var title = $('<h2/>').attr({
                        }).text(party);
                        var partyDiv = $('<div/>').attr({
                            'class':'hidden party',
                            'party':party,
                        }).append(title).appendTo('#mp_list');
                        $.each(mps,function(i,mp){
                            $('<div/>').attr({
                                'mpid':mp.person_id,
                                'class':'mp',
                            }).click(function(){
                                if($(this).hasClass('selected')){
                                    $(this).removeClass('selected');
                                } else {
                                    $(this).addClass('selected');
                                }
                            }).text(mp.name).appendTo(partyDiv);
                        });
                    });
                }
            });
            $('#search').click(function(e){
                var query = [];
                query.push($('#search_input').val());
                $('.mp').each(function(i,mp){
                    if($(mp).hasClass('selected')){
                        query.push($(mp).attr('mpid'));
                    }
                });
                console.log(query);
                drawChart(e,query);
            });
            $('.party h2').click(function(){
                if($(this).parent().hasClass('hidden')){
                    $(this).parent().removeClass('hidden');
                } else {
                    $(this).parent().addClass('hidden');
                }
            });
        });
   </script>
    <style type="text/css">
        body {
            font-family:sans;
            font-size: 10px;
        }
        #search {
            cursor: pointer;
            background: green;
            border: 1px solid black;
        }
        .party h2 {
            font-weight: normal;
            cursor: pointer;
        }
        .mp {
            cursor: pointer;
        }
        .hidden .mp {
            display:none;
        }
        .selected.mp {
            background: yellow;
        }
    </style>
</head>
<body>
<div id="chart_div" style="width: 900px; height: 500px; float: left;"></div>
<div id="mp_list" style="float: right;">
<input type="text" id="search_input" /><div id="search">Search</div></div>
</body>
</html>


